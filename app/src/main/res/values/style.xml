<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text.Title.Small" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/subTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Title.Middle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Title.Button" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:padding">8dp</item>

    </style>

</resources>